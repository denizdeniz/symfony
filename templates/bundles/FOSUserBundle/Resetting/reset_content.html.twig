{% trans_default_domain 'FOSUserBundle' %}

<p><a href="/">Back</a></p>
{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
	<div class="form-group">
    	<div class="input-group">
    		<div class="input-group mb-2 mr-sm-2 mb-sm-0">
    			<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
    			{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'New Password'} }) }}
    		</div>
    		{% for errorItem in form.plainPassword.first.vars.errors %}
    		<span class="help-block text-danger">{{ errorItem.message }}</span>
    		{% endfor %}
    	</div>
    </div>
    <div class="form-group">

    	<div class="input-group">
    		<div class="input-group mb-2 mr-sm-2 mb-sm-0">
    			<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
    			{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Confirm New Password'} }) }}
    		</div>
    		{% for errorItem in form.plainPassword.second.vars.errors %}
    		<span class="help-block text-danger">{{ errorItem.message }}</span>
    		{% endfor %}
    	</div>
    </div>
    <div class="form-group text-center">

    	<input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-success" />
    </div>

{{ form_end(form) }}

{% extends 'base.html.twig' %}


{% block content %}

<p>You have <span id="coin-amount">{{coins}} </span> coins in your account.</p>
<div class="form-group text-center">

		<button class="btn btn-primary" onclick="buyCoin()">Buy Coin</button>
</div>

<div style="display: none" id="error" class="alert alert-danger col-sm-12"></div>
	<div class="form-group">
		<div class="input-group">
			<div class="input-group mb-2 mr-sm-2 mb-sm-0">
				<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-hashtag"></i></div>
				<input type="text" id="coin-hash" class="form-control mb-2" value="" />
				<button class="btn btn-success mb-2" onclick="validate()">Validate</button>

			</div>
		</div>
	</div>

<p id="verify-amount"></p>


{% endblock %}